        { "id": "se-3-10", "type": "multiple-choice", "ageGroups": ["10-12"], "difficulty": 3, "prompt": "What is a topic sentence?", "options": ["The first sentence of a paragraph", "The last sentence", "A question", "A title"], "correctAnswer": "The first sentence of a paragraph" }
      ]
    },
