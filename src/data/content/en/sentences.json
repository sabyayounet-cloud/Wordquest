        { "id": "se-4-2", "type": "fill-in-blank", "ageGroups": ["13-15"], "difficulty": 4, "prompt": "___ the evidence suggests otherwise, the theory remains popular", "options": ["Although", "Because", "Since", "After"], "correctAnswer": "Although" },
        { "id": "se-4-3", "type": "true-false", "ageGroups": ["13-15"], "difficulty": 4, "prompt": "Passive voice is always wrong in writing", "correctAnswer": "false" },
        { "id": "se-4-4", "type": "multiple-choice", "ageGroups": ["13-15"], "difficulty": 4, "prompt": "Which is a rhetorical question?", "options": ["Who doesn't love sunshine?", "What time is it?", "Where is the library?", "How old are you?"], "correctAnswer": "Who doesn't love sunshine?" },
        { "id": "se-4-5", "type": "typing", "ageGroups": ["13-15"], "difficulty": 4, "prompt": "What literary device repeats the first letter? (example: Peter Piper picked)", "correctAnswer": "alliteration" },
