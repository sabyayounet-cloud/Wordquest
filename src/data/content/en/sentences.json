        { "id": "se-4-7", "type": "multiple-choice", "ageGroups": ["13-15"], "difficulty": 4, "prompt": "Which sentence has parallel structure?", "options": ["She likes reading, writing, and swimming.", "She likes reading, to write, and swim.", "She reading likes, writing, and to swim.", "Reading she likes and writing to swim."], "correctAnswer": "She likes reading, writing, and swimming." },
        { "id": "se-4-8", "type": "true-false", "ageGroups": ["13-15"], "difficulty": 4, "prompt": "A thesis statement presents the main argument of an essay", "correctAnswer": "true" },
        { "id": "se-4-9", "type": "fill-in-blank", "ageGroups": ["13-15"], "difficulty": 4, "prompt": "The study was conducted ___; the results were surprising", "options": ["meticulously", "happy", "green", "fast"], "correctAnswer": "meticulously" },
        { "id": "se-4-10", "type": "multiple-choice", "ageGroups": ["13-15"], "difficulty": 4, "prompt": "What makes a strong conclusion?", "options": ["Summarizes key points and adds insight", "Introduces new topics", "Repeats the introduction exactly", "Asks many questions"], "correctAnswer": "Summarizes key points and adds insight" }
      ]
